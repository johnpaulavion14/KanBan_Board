<% if params[:from] == "private"%>
  <div class="pt-3 board-con">
    <div class="new_card mx-auto mt-5">
      <div class="d-flex flex-column align-items-center">
        <%= link_to "Delete Board" ,delete_board_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-danger mt-2"%>
        <%= button_to "Move to Group Board" ,update_group_path({group:"true"}), method: :patch, class:"btn btn-success mt-2"%>
        <%= link_to "<-- go back", dashboard_index_path, class:"back-btn",class:"mt-3" %>
      </div>
    </div>
  </div>
<% else %>
  <% if @private %>
    <div class="pt-3 board-con">
      <div class="new_card mx-auto mt-5">
        <div class="d-flex flex-column align-items-center">
          <%= link_to "Delete Board" ,delete_board_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-danger mt-2"%>
          <%= button_to "Move to Your Board" ,update_group_path({group:"false"}), method: :patch, class:"btn btn-success mt-2"%>
          <%= link_to "<-- go back", dashboard_index_path, class:"back-btn",class:"mt-3" %>
        </div>
      </div>
    </div>
  <% else %>
  <div class="pt-3 board-con">
    <div class="new_card mx-auto mt-5">
      <div class="d-flex flex-column align-items-center">
        <b>Host: <%= @user %></b>
        <%= link_to "<-- go back", dashboard_index_path, class:"back-btn",class:"mt-3" %>
      </div>
    </div>
  </div>
  <% end %>

<% end %>



